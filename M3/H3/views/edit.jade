extends ./layout.jade

block title
  title Edit Data Buku
block content
  div.container
    div.row
      div.col-xs-6.col-md-4
      div.col-xs-6.col-md-4
        form(id="form", method="post", action="/update/buku/#{buku.idBuku}")
          .form-group
            label Id Buku :
            input(type="text", placeholder="Id Buku", name="idBuku", value="#{buku.idBuku}", disabled).form-control
          .form-group
            label Judul Buku :
            input(type="text", placeholder="Judul Buku", name="judul", value="#{buku.judul}").form-control
          .form-group
            label Pengarang :
            input(type="text", placeholder="Pengarang", name="pengarang", value="#{buku.pengarang}").form-control
          .form-group
            label Penerbit :
            input(type="text", placeholder="Penerbit", name="penerbit", value="#{buku.penerbit}").form-control
          .form-group
            label Tahun Terbit :
            input(type="number", placeholder="Tahun Terbit", name="tahunTerbit", value="#{buku.tahunTerbit}").form-control
          .form-group
            label Jumlah Halaman :
            input(type="number", placeholder="Jumlah Halaman", name="halaman", value="#{buku.halaman}").form-control
          input(type="hidden", name="_csrf" value="#{csrfToken}")
          button(type="submit").btn.btn-primary Simpan
      div.col-xs-6.col-md-4